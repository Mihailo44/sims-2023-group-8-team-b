<Window x:Class="TouristAgency.View.Home.OwnerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Home"
        mc:Ignorable="d"
        Title="OwnerHome" Height="500" Width="750" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Blue" Margin="0,0,0,-20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,410" Width="795">
                <Menu Height="25" VerticalAlignment="Top" Margin="10,0,0,0" Background="BlanchedAlmond">
                    <MenuItem Header="_File">
                        <MenuItem InputGestureText="Ctrl+N" Header="New">
                            <MenuItem Header="Accommodation"/>
                            <MenuItem Header="Subject"/>
                        </MenuItem>
                        <MenuItem Header="Open">
                            <MenuItem Header="Accommodations"/>
                        </MenuItem>
                        <MenuItem x:Name="MenuItemExit" InputGestureText="Ctrl+C" Header="Close"/>
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem Header="Edit">
                            <MenuItem Header="Professor"/>
                        </MenuItem>
                        <MenuItem Header="Delete"/>
                        <MenuItem x:Name="MenuBitanItem" Header="N.I.P." InputGestureText="Ctrl+Q" Visibility="Collapsed"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
            <ToolBar Width="745" Height="35" Margin="0,-780,0,0">
                <Button Width="25" Height="25" Content="Create" Margin="10,0,0,0"/>
                <Button Width="25" Height="25" Content="Edit"  Margin="10,0,0,0"/>
                <Button Width="25" Height="25" Content="Delete"  Margin="10,0,0,0"/>
                    
               
                <TextBox TextWrapping="Wrap" FlowDirection="LeftToRight"  Width="165" BorderBrush="DarkGray" Background="BlanchedAlmond" HorizontalAlignment="Right" Margin="400,0,20,0"
                         Text="{Binding Path=SearchBox,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <Button Width="25" Height="25" Content="Search"/>
            </ToolBar>
            <TabControl x:Name="tbCtrl" Background="Aquamarine" Margin="0,-350,0,0">
                <TabItem Header="Professors" Width="75" Height="25" FontSize="13">
                    <DataGrid Height="285" FontSize="13" ItemsSource="{Binding listaProfesora, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelektovaniProfesor, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="170" Header="First name" Binding="{Binding Ime,Mode=OneTime}"/>
                            <DataGridTextColumn Width="170" Header="Last name" Binding="{Binding Prezime, Mode=OneTime}"/>
                            <DataGridTextColumn Width="170" Header="Title" Binding="{Binding Zvanje, Mode=OneTime}"/>
                            <DataGridTextColumn Width="210" Header="Email" Binding="{Binding Email, Mode=OneTime}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
             <!--   <TabItem Header="{ns:Loc Subjects}" Width="75" Height="25" FontSize="13">
                    <DataGrid Height="285" FontSize="13" ItemsSource="{Binding listaPredmeta, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelektovaniPredmet, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="120" Header="{ns:Loc Code}" Binding="{Binding DebilnoPolje}"/>
                            <DataGridTextColumn Width="200" Header="{ns:Loc Name}" Binding="{Binding NazivPredmeta}"/>
                            <DataGridTextColumn Width="120" Header="{ns:Loc ESPB}" Binding="{Binding BrojEspb}"/>
                            <DataGridTextColumn Width="150" Header="{ns:Loc Year of study}" Binding="{Binding GodinaPredmeta}"/>
                            <DataGridTextColumn Width="130" Header="{ns:Loc Semester}" Binding="{Binding Semestar}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem> -->
            </TabControl>
            <StatusBar Height="30">
                <Label x:Name="lblVreme" Width="140" FontSize="13" Margin="25,-3,0,0"/>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
