<Window x:Class="TouristAgency.View.Home.OwnerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Home"
        mc:Ignorable="d"
        Title="OwnerHome" Height="768" Width="1024" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Height="740" Width="1010" Orientation="Vertical" Background="LightSalmon">
            <StackPanel Orientation="Horizontal" Height="35" Width="1000" Background="Blue">
                <Menu Height="35" Width="1004" Background="BlanchedAlmond">
                    <MenuItem Header="_File" Width="50" Height="35" Padding="10,0,0,0" FontSize="15">
                        <MenuItem InputGestureText="Ctrl+N" Header="New" FontSize="15">
                            <MenuItem Header="Accommodation" Click="MenuNewAccommodation_Click" FontSize="15"/>
                        </MenuItem>
                        <MenuItem Header="Open" FontSize="15">
                            <MenuItem Header="Accommodations" FontSize="15"/>
                        </MenuItem>
                        <MenuItem x:Name="MenuItemExit" InputGestureText="Ctrl+C" Header="Close"/>
                    </MenuItem>
                    <MenuItem Header="_Edit" Width="50" Height="35" Padding="10,0,0,0" FontSize="15">
                        <MenuItem Header="Edit" FontSize="15">
                            <MenuItem Header="Reservation" FontSize="15"/>
                        </MenuItem>
                        <MenuItem Header="Delete" FontSize="15"/>
                        <MenuItem x:Name="MenuBitanItem" Header="N.I.P." InputGestureText="Ctrl+Q" Visibility="Collapsed"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
            <ToolBar Width="1000" Height="40" Margin="0,0,0,35">
                <Button Width="70" Height="35" Content="Create" Margin="10,0,0,0" Click="ToolBarCreate_Click" FontSize="15"/>
                <Button Width="70" Height="35" Content="Edit"  Margin="10,0,0,0" FontSize="15"/>
                <Button Width="70" Height="35" Content="Delete"  Margin="10,0,0,0" FontSize="15"/>
            </ToolBar>

            <TabControl x:Name="tbCtrl" Background="Aquamarine">
                <TabItem Header="Accommodations" Width="145" Height="30" FontSize="15">
                    <DataGrid Height="550" FontSize="15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Name"/>
                            <DataGridTextColumn Width="*" Header="City"/>
                            <DataGridTextColumn Width="2*" Header="Guest"/>
                            <DataGridTextColumn Width="2*" Header="Phone"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Reservations" Width="145" Height="30" FontSize="15">
                    <DataGrid Height="550" FontSize="15" ItemsSource="{Binding Reservations,UpdateSourceTrigger=PropertyChanged}"
                              SelectionMode="Single" SelectionUnit="FullRow" AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedReservation,UpdateSourceTrigger=PropertyChanged}"  MouseDoubleClick="DataGridReservations_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Header="Accommodation" FontSize="15" Binding="{Binding Accommodation.Name}"/>
                            <DataGridTextColumn Width="*" Header="First Name" FontSize="15" Binding="{Binding Guest.FirstName}"/>
                            <DataGridTextColumn Width="*" Header="Last Name" FontSize="15" Binding="{Binding Guest.LastName}"/>
                            <DataGridTextColumn Width="*" Header="Start" FontSize="15" Binding="{Binding Start}"/>
                            <DataGridTextColumn Width="*" Header="End" FontSize="15" Binding="{Binding End}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
            <!--<StatusBar Height="30">
                <Label x:Name="lblVreme" Width="140" FontSize="13" Margin="25,-3,0,0"/>
            </StatusBar> -->
        </StackPanel>
    </Grid>
</Window>
