<Window x:Class="TouristAgency.View.Home.GuideHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Home"
        mc:Ignorable="d"
        Title="GuideHome" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="TourCreation" Click="TourButton_Click" Width="200" Height="40"/>
            <Button Content="ActiveTourDisplay" Click="ActiveTourDisplayButton_Click" Width="200" Height="40"/>
            <Button Content="CancelTourDisplay" Click="CancelTourDisplayButton_Click" Width="200" Height="40"/>
            <Button Content="TourStatisticsDisplay" Click="TourStatisticsDisplayButton_Click" Width="200" Height="40"/>
            <Button Content="GuideProfileDisplay" Click="GuideProfileDisplayButton_Click" Width="200" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
