<Window x:Class="TouristAgency.View.Main.OwnerMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Main"
        xmlns:vm="clr-namespace:TouristAgency.ViewModel"
                    xmlns:creation="clr-namespace:TouristAgency.View.Creation"
                    xmlns:home="clr-namespace:TouristAgency.View.Home"
                    xmlns:main="clr-namespace:TouristAgency.View.Main"
        mc:Ignorable="d"
        Title="OwnerMain" Height="768" Width="1024" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        x:Name="OwnerStart">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AccommodationCreationViewModel}">
            <creation:AccommodationCreationForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OwnerHomeViewModel}">
            <home:OwnerHome/>
        </DataTemplate>
    </Window.Resources>
    
    <ContentControl Content="{Binding CurrentVM,UpdateSourceTrigger=PropertyChanged}"/>

</Window>
