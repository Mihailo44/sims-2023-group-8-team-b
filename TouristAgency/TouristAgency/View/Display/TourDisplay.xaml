<Window x:Class="TouristAgency.View.Display.TourDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Display"
        mc:Ignorable="d"
        Title="Tour" Height="450" Width="610" Loaded="Window_Loaded">
    
    <Grid Height="420" HorizontalAlignment="Center" Margin="0,25,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"></ColumnDefinition>
            <ColumnDefinition Width="175"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="270"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding Path=Tours}" Width="330" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Path=Name}"></Label>
                        <Label Content="{Binding Path=ShortLocation.City}"></Label>
                        <Label Content="{Binding Path=ShortLocation.Country}"></Label>
                        <Label Content="{Binding Path=Duration}"></Label>
                        <Label Content="{Binding Path=Language}"></Label>
                        <Label Content="{Binding Path=MaxAttendants}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <GroupBox Width="200" Height="270" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right">
            <GroupBox.Header>
                <Label Content="Filters" FontSize="18"></Label>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="81"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Country:" Height="26"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Width="100" Height="27"/>
                <Label Grid.Row="1" Grid.Column="0" Content="City:" Height="26" HorizontalAlignment="Left" />
                <ComboBox Grid.Row="1" Grid.Column="1" Width="100" Height="27" ItemsSource="{Binding Path=Cities}"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Duration:" Height="26"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Width="100" Height="27"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Language:" Height="26"/>
                <ComboBox Grid.Row="3" Grid.Column="1" Width="100" Height="27"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Max capacity:" Height="26"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Width="100" Height="27"/>
                <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="Apply filter" Width="100" Height="30" Click="Filter_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="80" VerticalAlignment="Top" Margin="0,15,0,0">
            <GroupBox.Header>
                <Label Content="Reservation" FontSize="18"></Label>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Content="Number of reservations:" Height="26"/>
                <ComboBox Grid.Column="1" Width="100" Height="27" HorizontalAlignment="Left"/>
                <Button Grid.Column="2" Content="Make a reservation" Width="110" Height="30"/>
                <Button Grid.Column="3" Content="Cancel reservation" Width="110" Height="30"/>
            </Grid>

        </GroupBox>
    </Grid>
</Window>
