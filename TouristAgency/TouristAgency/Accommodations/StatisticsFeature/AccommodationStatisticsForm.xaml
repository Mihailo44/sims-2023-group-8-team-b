<UserControl x:Class="TouristAgency.Accommodations.StatisticsFeature.AccommodationStatisticsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouristAgency.Accommodations.StatisticsFeature"
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="900" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="400"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Background="Bisque">
            <Label Width="160" Height="40" Margin="50,5,0,0" FontSize="22" Content="Stats By Year"/>
            <ComboBox Height="35" Margin="20,5,0,0"  Width="120" FontSize="22"/>
            <Button Width="200" Margin="325,5,0,0" Content="Print PDF Report" Style="{StaticResource BasicBtn}"/>
        </WrapPanel>

        <WrapPanel Grid.Row="1" Margin="0,15,0,0" Background="AntiqueWhite">
            <WrapPanel Margin="0,10,0,0">
                <Label Width="250" Height="40" Margin="50,0,0,0" FontSize="22" Content="Reservations"/>
                <Label Width="70" Height="40" Margin="10,0,0,0" FontSize="22" FontWeight="SemiBold" Content="69"/>
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <Label Width="250" Height="40" Margin="50,0,0,0" FontSize="22" Content="Cancelations"/>
                <Label Width="70" Height="40" Margin="10,0,0,0" FontSize="22" FontWeight="SemiBold" Content="69"/>
            </WrapPanel>
            <WrapPanel>
                <Label Width="250" Height="40" Margin="50,0,0,0" FontSize="22" Content="Postponed Reservations"/>
                <Label Width="70" Height="40" Margin="10,0,0,0" FontSize="22" FontWeight="SemiBold" Content="69"/>
            </WrapPanel>
            <WrapPanel>
                <Label Width="320" Height="40" Margin="50,0,0,0" FontSize="22" Content="Renovation Reccommendations"/>
                <Label Width="70" Height="40" Margin="10,0,0,0" FontSize="22" FontWeight="SemiBold" Content="69"/>
            </WrapPanel>
            <WrapPanel>
                <Label Width="250" Height="40" Margin="50,0,0,0" FontSize="22" Content="Busiest Month"/>
                <Label Width="120" Height="40" Margin="10,0,0,0" FontSize="22" FontWeight="SemiBold" Content="January"/>
            </WrapPanel>
        </WrapPanel>

        <StackPanel Height="200" Margin="0,200,0,0" Grid.Row="1" Background="LightBlue">
            <WrapPanel Margin="0,20,0,0">
                <Label Width="160" Height="40" Margin="50,0,0,0" FontSize="22" Content="Stats By Month"/>
                <ComboBox Height="35" Margin="20,0,0,0"  Width="120" FontSize="22"/>
            </WrapPanel>
            <ListView Height="70" Width="880" Margin="0,20,0,0" Grid.Row="2"
                  VerticalAlignment="Top"
                  SelectionMode="Single"
                  FontSize="19">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="180" Header="Reservations"/>
                        <GridViewColumn Width="180" Header="Cancelations"/>
                        <GridViewColumn Width="220" Header="Postponed Reservations"/>
                        <GridViewColumn Width="280" Header="Renovation Reccommendations"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <Canvas Grid.Row="2" Background="AntiqueWhite">
            
        </Canvas>
       
    </Grid>

</UserControl>
