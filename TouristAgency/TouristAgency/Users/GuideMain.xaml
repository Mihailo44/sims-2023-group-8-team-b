<Window x:Class="TouristAgency.Users.GuideMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:us="clr-namespace:TouristAgency.Users"
            xmlns:creation="clr-namespace:TouristAgency.View.Creation"
            xmlns:home="clr-namespace:TouristAgency.View.Home"
            xmlns:main="clr-namespace:TouristAgency.View.Main"
        xmlns:local="clr-namespace:TouristAgency.View.Main"
        mc:Ignorable="d"
        Title="GuideMain" Height="600" Width="390" WindowStartupLocation="CenterScreen" Name="GuideStart">

    <Window.Resources>
        <DataTemplate DataType="{x:Type us:GuideHomeViewModel}">
            <us:GuideHome/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type us:GuideProfileDisplayViewModel}">
            <us:GuideProfileDisplay/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentVM,UpdateSourceTrigger=PropertyChanged}"/>
</Window>
