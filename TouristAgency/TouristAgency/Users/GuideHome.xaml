<Window x:Class="TouristAgency.View.Home.GuideHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristAgency.View.Home"
        mc:Ignorable="d"
        Title="GuideHome" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="TourCreation" Command="{Binding CreateTourCmd}" Width="200" Height="40"/>
            <Button Content="ActiveTourDisplay" Command="{Binding ActiveTourCmd}" Width="200" Height="40"/>
            <Button Content="CancelTourDisplay" Command="{Binding CancelTourCmd}" Width="200" Height="40"/>
            <Button Content="TourStatisticsDisplay" Command="{Binding TourStatisticsCmd}" Width="200" Height="40"/>
            <Button Content="GuideProfileDisplay" Command="{Binding GuideProfileCmd}" Width="200" Height="40"/>
            <Button Content="Log out" Command="{Binding CloseCmd}" Width="200" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
